	"actions":{
		"check":{
			"go":{
				"orders":"?office",
				"admin":"?office/admin"
			},
			"title":"Отправить заявку на проверку",
			"confirm":"Отправить заявку на проверку?",
			"result":"Заявка отправлена на проверку менеджеру. После проверки будет отправлено письмо на {email}.",
			"usermail":"orderToCheck",
			"mangmail":"AdmOrderToCheck"
		},
		"setPaid":{
			"omit":"{(paymenttype=:card|manage.paid)?:yes}",
			"go":{
				"admin":"?office/{place}/{id}"
			},
			"title":"Отметить оплату заявки",
			"confirm":"Оплачено {~cost(total)} руб.?",
			"result":"Оплата по заявке зафиксированна.",
			"usermail":"setPaid"
		},
		"saved":{
			"go":{
				"orders":"?office",
				"admin":"?office/admin"
			},
			"title":"Сохранить заявку",
			"confirm":"Заявка будет сохранена, продолжить?",
			"result":"Заявка успешно сохранена!"
		},
		"active":{
			"go":{
				"orders":"?office/orders/my"
			},
			"title":"Сделать заявку активной",
			"confirm":"Заявка {id} будет сделана активной.",
			"result":"Заявка {id} сделана активной."
		},
		"removechanges":{
			"go":{
				"orders":"?office/{place}/{id}",
				"admin":"?office/{place}/{id}"
			},
			"title":"Отменить несохраённые измнения",
			"confirm":"Оменить сделанные изменения в полях для ввода?",
			"result":"Изменения отменены"
		},
		"savechanges":{
			"go":{
				"orders":"?office/{place}/{id}",
				"admin":"?office/{place}/{id}"
			},
			"title":"Сохранить изменения",
			"confirm":"Сделанные вами изменения станут доступными всем у кого есть доступ к заявке",
			"result":"Изменения сохранены"
		},
		"paycard":{
			"omit":"{paymenttype!:card?:yes}",
			"link":"/office/orders/{id}/paycard",
			"title":"Перейти к оплате картой",
			"confirm":"Перейти к оплате заявки?"
		},
		
		"cart":{
			"link":"/office/cart",
			"title":"Редактировать товары",
			"confirm":"Перейти к корзину?"
		},
		"refresh":{
			"omit":"{basket|:yes}",
			"go":{
				"admin":"?office/admin/{id}"
			},
			"title":"Обновить данные из каталога",
			"confirm":"Обновить данные?",
			"result":"Данные обновлены!"
		},
		"refunds":{
			"link":"/office/orders/{id}/refunds",
			"title":"Перейти к возврату оплаты",
			"confirm":"Перейти к возврату оплаты?"
		},
		"refuseable":{
			"omit":"{(paymenttype!:card|manage.paid)??:yes}",
			"go":{
				"admin":"?office/admin"
			},
			"title":"Разрешить возврат оплаты",
			"confirm":"Разрешить возврат оплаты?",
			"result":"Разрешён возврат оплаты",
			"usermail":"refuseable"
		},
		"clear":{
			"omit":"{basket?(manage.paid?:yes)?:yes}",
			"go":{
				"orders":"?office/{place}/{id}",
				"admin":"?office/{place}/{id}"
			},
			"title":"Очистить корзину в заявке",
			"confirm":"Очистить заявку?",
			"result":"Корзина заявки {id} очищена"
		},
		"realdel":{
			"omit":"{manage.paid?:yes}",
			"title":"Удалить заявку",
			"go":{
				"orders":"?office",
				"admin":"?office/admin"
			},
			"confirm":"Удалить заявку {id}?",
			"result":"Заявка {id} удалена"
		},
		"wholesaleDelete":{
			"go":{
				"wholesale":"?office/wholesale"
			},
			"title":"Удалить запись об оптовике",
			"confirm":"Удалить запись об оптовике?",
			"result":"Запись об оптовике удалена!"
		},
		"copy":{
			"go":{
				"orders":"?office"
			},
			"title":"Сделать копию заявки",
			"confirm":"Копировать заявку {id}?",
			"result":"Заявка <a onclick='cart.goTop()' href='?office/orders/{copyid}'>{copyid}</a> скопирована в активную заявку"
		},
		"ready":{
			"omit":"{paymenttype!:card?:yes}",
			"go":{
				"admin":"?office/admin"
			},
			"title":"Заявка готова к оплате",
			"confirm":"Заявка готова к оплате?",
			"result":"Заявка готова к оплате.",
			"usermail":"ready"
		},
		"editcart":{
			"go":{
				"orders":"?office/cart"
			},
			"title":"Редактировать товары в заявке",
			"confirm":"Сделать заявку активной?",
			"result":"Заявка сделана активной, в <a onclick='cart.goTop()' href='?office/cart'>корзине</a> возможно изменить выбранные товары."
		},
		"dismiss":{
			"omit":"{manage.paid?:yes}",
			"go":{
				"admin":"?office/admin"
			},
			"title":"Отклонить заявку",
			"confirm":"Отклонить заявку?",
			"result":"Заявка отклонена.",
			"usermail":"dismiss"
		},
		"delivery":{
			"omit":"{delivery!:delivery?:yes}",
			"go":{
				"admin":"?office/admin"
			},
			"title":"Заявка доставлется",
			"confirm":"Заявка доставляеся?",
			"result":"Заявка доставляется.",
			"usermail":"delivery"
		},
		"complete":{
			"go":{
				"admin":"?office/admin"
			},
			"title":"Заявка выполнена",
			"confirm":"Заявка выполнена?",
			"result":"Заявка выполнена.",
			"usermail":"complete"
		},
		"execution":{
			"omit":"{manage.paid??(paymenttype=:card?:yes)}",
			"go":{
				"admin":"?office/admin"
			},
			"title":"Заявка в исполнении",
			"confirm":"Заявка исполняется?",
			"result":"Заявка исполняется.",
			"usermail":"execution"
		},
		"picked":{
			"go":{
				"admin":"?office/admin"
			},
			"title":"Заявка укоплектована",
			"confirm":"Заявка упомплектована?",
			"result":"Заявка укомплектована.",
			"usermail":"picked"
		},
		"bankrefunds":{
			"title":"Отметка о возврате оплаты",
			"result":"Действие для банка! Возврат денег.",
			"usermail":"bankrefunds",
			"mangmail":"AdmBankrefunds"
		},
		"bankpaid":{
			"title":"Отметка об оплате заявки",
			"result":"Действие для банка! Заявка оплачена.",
			"usermail":"BankPaid",
			"mangmail":"AmdBankPaid"
		}
	},
